<% if session[:admin_user]==true %>
<h1>Listing users:</h1>

<table>
  <tr id="usertable">
    <th>Uname</th>
    <th>Name</th>
    <th>Email</th>
    <th>Admin perm</th>
    <th colspan="3"></th>
  </tr>

<% @users.each do |user| %>
  <tr id="usertable">
    <td><%= user.uname %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin_perm %></td>
     <% if session[:admin_user] !=false %>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if session[:current_user_id]!=user.id %>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
            <% end %>
     <% end %>
  </tr>
<% end %>
</table>

<br />
<% end %>
<%= link_to 'Back', posts_path %>
